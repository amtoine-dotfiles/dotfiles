super + Escape
    pkill -USR1 -x sxhkd

XF86MonBrightness{Down,Up}
    notify-send "main ({-,+})"
XF86MonBrightness{Down,Up} + shift
    notify-send "second ({-,+})"
XF86AudioMute
    gmixer --toggle --channel Master --notify
ctrl + XF86AudioMute
    gmixer --bluetooth --notify
XF86Audio{Lower,Raise}Volume
    gmixer --{down,up} --channel Master --step 5 --notify

super + {_,shift} + F1
    gshot {window,full} --notify

super + Return
    $WM_TERM nu --commands '$env.SHELL = $nu.current-exe; tmux new-session -A -s (random uuid)'
super + {_,shift,alt} + @space
    rofi -show {drun,run,window}

super + d
    dmenu_run -l 10 -bw 5 -c -fn "mononoki Nerd Font-20"
super + shift + q
    $HOME/.local/bin/logout --lock slock --launcher dmenu
super + p
    $HOME/.local/bin/passmenu -l 10 -bw 5 -p "Select a password to copy"

super + z; b
    gbat --print
super + z; d; {c, h, p}
    dunstctl {close-all,history-pop,set-paused toggle}
super + z; n
    $WM_TERM --class "float,float" bash -c "\
        nmcli d | grep -w 'connected' | sed 's/\s\+/ /g'| cut -d' ' -f4; \
        echo -e '\n\n'; \
        ping google.com \
    "
super + z; c; {w,b}
    {\
        networkmanager_dmenu -l 30 -bw 5 -i -fn "mononoki Nerd Font-20",\
        rofi-bluetooth\
    }
super + z; p; {b,t}
    gpcm --{blur,toggle} --notify
super + z; h
    $WM_TERM --class "htop,htop" htop
super + z; g
    gghn
super + z; t
    gdate
super + z; w; f
    feh --no-fehbg --bg-fill --randomize /usr/share/backgrounds/*
